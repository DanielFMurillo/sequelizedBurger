<h1>Eat-Da-Burger!</h1>



<div class="container">	
	<img src="../public/img/burger.png"> 
		
</div>

<ul>
  {{#each burger}}
      {{#unless this.devoured}}
        <li>
          {{this.name}}
            <form action="/burger/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour it!</button>
            </form>
        </li>
     {{/unless}}
  {{/each}}
</ul>


<h2>Burgers Devoured!</h2>
<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.name}} 
        <form action= "/burgers/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">        
         </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Enter your burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>


  <button type="submit">Submit!</button>
</form>


 